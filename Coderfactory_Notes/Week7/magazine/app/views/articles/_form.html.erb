<%= form_for(article) do |f| %>

  <% if article.errors.any? %>
    <div id="error explanation">
      <h2>
        <%= pluralize(article.errors.count, 'error') %> prevented this from being saved
      </h2>
      <ul>
        <% article.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %>
    <%= f.text_field :content %>
  </p>
  <p>
    <%= f.submit %>
  </p>
  <% end %>
