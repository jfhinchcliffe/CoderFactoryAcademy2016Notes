<p id="notice"><%= notice %></p>

<h1>Carts</h1>

<table>
  <thead>
    <tr>
      <th>Total</th>
      <th>Paid</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.total %></td>
        <td><%= cart.paid %></td>
        <td><%= cart.user.profile.first_name %> <%= cart.user.profile.last_name %></td>
        <td><%= link_to 'Show', cart %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
